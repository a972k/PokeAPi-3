# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-west-2"
availability_zone = "us-west-2a"

# SSH Configuration
key_name = "vockab"
public_key_path = "~/.ssh/id_rsa.pub"

# Instance Configuration
instance_type = "t2.micro"          # Game instance - free tier
backend_instance_type = "t2.small"   # Backend instance - for Docker

# AMI Configuration (Amazon Linux 2023)
game_ami_id = "ami-0c02fb55956c7d316"
backend_ami_id = "ami-0c02fb55956c7d316"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
subnet_cidr = "10.0.1.0/24"

# Security Configuration
allowed_ssh_cidrs = ["0.0.0.0/0"]  # Restrict this in production!

# Application Configuration
flask_api_port = 5000
mongodb_port = 27017
game_frontend_port = 8000

# Project Configuration
project_name = "pokeapi"
environment = "development"

# For Production, consider:
# allowed_ssh_cidrs = ["YOUR_IP/32"]  # Only your IP
# instance_type = "t3.small"          # More performance
# backend_instance_type = "t3.medium" # More resources for production
